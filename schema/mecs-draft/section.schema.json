{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/section.schema.json",
  "title": "MECS Section Schema",
  "description": "Section/module within a course",
  "type": "object",
  "required": ["id", "title", "contentType", "content"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this section"
    },
    "title": {
      "type": "string",
      "description": "Section title",
      "minLength": 1
    },
    "order": {
      "type": "number",
      "description": "Display order within the course"
    },
    "contentType": {
      "type": "string",
      "description": "Type of content (namespaced)",
      "pattern": "^[a-z0-9-]+:[a-z0-9-]+$",
      "examples": [
        "mecs:text",
        "mecs:video",
        "mecs:document",
        "mecs:quiz",
        "custom:interactive-simulation"
      ]
    },
    "content": {
      "type": "object",
      "description": "Content data (structure depends on contentType)"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "duration": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "enum": ["minutes", "hours"] }
          }
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"]
        },
        "learningObjectives": {
          "type": "array",
          "items": { "type": "string" }
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
