{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/course.schema.json",
  "title": "MECS Course Schema",
  "description": "Modular Educational Content Standard - Course structure",
  "type": "object",
  "required": ["mecsVersion", "type", "id", "title", "sections"],
  "properties": {
    "mecsVersion": {
      "type": "string",
      "description": "Version of MECS standard this course conforms to",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0"]
    },
    "type": {
      "type": "string",
      "const": "mecs:course",
      "description": "Type identifier for this content"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for this course"
    },
    "title": {
      "type": "string",
      "description": "Course title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Course description"
    },
    "metadata": {
      "type": "object",
      "description": "Course metadata",
      "properties": {
        "author": {
          "type": "string",
          "description": "Course author or creator"
        },
        "institution": {
          "type": "string",
          "description": "Educational institution"
        },
        "subject": {
          "type": "string",
          "description": "Subject area (e.g., Mathematics, Computer Science)"
        },
        "level": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced", "expert"],
          "description": "Difficulty level"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "ISO 639-1 language code",
          "examples": ["en", "es", "en-US"]
        },
        "duration": {
          "type": "object",
          "description": "Estimated time to complete",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string", "enum": ["hours", "days", "weeks"] }
          }
        },
        "prerequisites": {
          "type": "array",
          "description": "Prerequisites for this course",
          "items": { "type": "string" }
        },
        "learningObjectives": {
          "type": "array",
          "description": "What students will learn",
          "items": { "type": "string" }
        },
        "tags": {
          "type": "array",
          "description": "Searchable tags",
          "items": { "type": "string" }
        },
        "license": {
          "type": "string",
          "description": "Content license (e.g., CC-BY-4.0, MIT)"
        }
      }
    },
    "sections": {
      "type": "array",
      "description": "Course sections/modules",
      "items": {
        "$ref": "section.schema.json"
      }
    },
    "assessments": {
      "type": "object",
      "description": "Course assessments (future extension)",
      "properties": {
        "quizzes": { "type": "array" },
        "assignments": { "type": "array" },
        "exams": { "type": "array" }
      }
    },
    "extensions": {
      "type": "object",
      "description": "Custom extensions to the standard",
      "additionalProperties": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "additionalProperties": false
}
